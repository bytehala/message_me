<div class="ui small menu inverted">
  <div class="ui container">
    <%= link_to "Chatroom", root_path, class: "item" %>
    <a href="#" class="item">Messages</a>
    <div class="right menu">
      <% if logged_in? %>
        <div class="ui dropdown item">Account <i class="dropdown icon"></i>
          <div class="menu">
            <%= link_to "Logout", logout_path, method: :delete, class: "item"  %>
          </div>
        </div>
      <% else %>
        <%= link_to "Log in", "/login", class: "item" %>
      <% end %>
      <% if !logged_in? %>
        <div class="item">
          <div class="ui primary button">Sign Up</div>
        </div>
      <% end %>
    </div>
  </div>
</div>
